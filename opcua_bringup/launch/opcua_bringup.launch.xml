<launch>
    <arg name="mock_hardware" default="false" />
    <arg name="mock_sensor_commands" default="false"/>

    <let name="robot_description_content" value="$(command '$(find-exec xacro) $(find-pkg-share opcua_bringup)/urdf/opcua.urdf.xacro mock_hardware:=$(var mock_hardware) mock_sensor_commands:=$(var mock_sensor_commands)')"/>

    <!--robot_state_pub_node-->
    <node pkg="robot_state_publisher" exec="robot_state_publisher" output="both">
        <param name="robot_description" value="$(var robot_description_content)"/>
    </node>

    <!--control_node-->
    <node pkg="controller_manager" exec="ros2_control_node" output="both">
        <param name="update_rate" value="20"/>
    </node>

    <let name="controllers_file" value="opcua_controllers.yaml"/>
    <let name="controllers_file_path" value="$(find-pkg-share opcua_bringup)/config/$(var controllers_file)"/>

    <node pkg="controller_manager" exec="spawner" name="jsb_spawner" output="screen" args="joint_state_broadcaster -p $(var controllers_file_path)"/>
    <node pkg="controller_manager" exec="spawner" name="opcua_ctrl_spawner" output="screen" args="opcua_controller -p $(var controllers_file_path)"/>

</launch>
